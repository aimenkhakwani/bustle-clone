

{{#if updateArticleForm}}
  <div>
    <form>
      <div class="form-group">
        {{input value=title id="title" placeholder=article.title class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=author id="author" placeholder=article.author class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=teaser id="teaser" placeholder=article.teaser class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=text id="text" placeholder=article.text class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=image id="image" placeholder=article.image class="form-control"}}
      </div>
      <button class = "btn btn-default center-block" {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn-update" {{action 'updateArticleForm' article}}>(Edit)</button>
{{/if}}
